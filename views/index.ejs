<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Backbone Chat</title>
  <style>
    .users {
      float: right;
      width: 25%;
    }
    .user {
      border: 1px solid black;
      display: block;
      margin: 15px;
    }

    .messages {
      float: left;
      width: 75%;
    }
  </style>
</head>
<body>
  <div id="chat">
    <div class="users">
      <input type="text" id="username-input" placeholder="Choose your name">
      <div id="chat-users"></div>
    </div>
    <div class="messages">
      <div id="chat-messages"></div>

      <input type="text" id="chat-input" placeholder="Write your message">
    </div>
  </div>

  <script type="text/template" id="message-template">
    <span>
      {{text}}
    </span>
  </script>

  <script type="text/template" id="user-template">
    <span class="user">
      {{name}}
      <br>
      ID: {{id}}
    </span>
  </script>

  <script src="/socket.io/socket.io.js"></script>
  <script src="js/chat.dev.js"></script>
</body>
</html>